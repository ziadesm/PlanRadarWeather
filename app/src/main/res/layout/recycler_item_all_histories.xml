<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clWeatherHistoryParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWeatherIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCityHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:maxLines="1"
        android:layout_marginHorizontal="4dp"
        tools:text="@string/app_name"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivWeatherIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivWeatherIcon"
        app:layout_constraintStart_toEndOf="@id/ivWeatherIcon"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCityStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:maxLines="1"
        tools:text="@string/app_name"
        android:fontFamily="@font/roboto_bold"
        android:textSize="14sp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCityHistory"
        app:layout_constraintBottom_toBottomOf="@id/ivWeatherIcon"
        app:layout_constraintStart_toEndOf="@id/ivWeatherIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>